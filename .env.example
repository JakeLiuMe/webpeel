# WebPeel Environment Configuration

# Node environment (development | production)
NODE_ENV=development

# API Server Port
PORT=3000

# CORS Allowed Origins (comma-separated, leave empty to disable CORS)
# Example: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=

# Database (PostgreSQL via Neon)
# Example: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=

# JWT Secret (for user authentication)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('base64url'))"
JWT_SECRET=

# Stripe API Keys (for billing)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs (for tier mapping)
STRIPE_PRICE_PRO=
STRIPE_PRICE_MAX=

# Demo API Key (DEVELOPMENT ONLY - minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64url'))"
# WARNING: Never use in production! Remove or leave empty in production.
DEMO_KEY=

# Rate Limiting Window (milliseconds)
RATE_LIMIT_WINDOW_MS=60000

# Browser Settings
MAX_CONCURRENT_BROWSERS=5
BROWSER_TIMEOUT_MS=30000

# Response Limits
MAX_RESPONSE_SIZE_MB=10
MAX_URL_LENGTH=2048
